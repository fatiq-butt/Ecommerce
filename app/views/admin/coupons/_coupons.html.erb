<tr id="coupons_<%= coupons.id %>">
  <td><%= coupons.id %></td>
  <td><%= coupons.name %></td>
  <td><%= coupons.discount %> %</td>
  <td>
    <%= link_to "Show", admin_coupon_path(coupons), class: "btn btn-primary"  %>
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#coupons_modal_<%= coupons.id %>">
        Delete
      </button>
    <%= link_to "Edit", edit_admin_coupon_path(coupons), class: "btn btn-primary" %>
  </td>
</tr>
<div class="modal" id="coupons_modal_<%= coupons.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Delete coupons Request</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Are you sure? You want to delete this coupons..?
      </div>
      <div class="modal-footer">
        <%= link_to "Delete", admin_coupon_path(coupons), method: :delete, class: "btn btn-danger","data-bs-dismiss" =>"modal", remote: true %>
      </div>
    </div>
  </div>
</div>
