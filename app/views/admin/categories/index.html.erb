<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-6">
              <h2>Categories Listing</h2>
            </div>
            <div class="col-lg-3">
              <div class="input-group">
                <%= link_to "Add New +", new_admin_category_path,class: "btn btn-primary" %> 
              </div>
            </div>
          </div>
          <hr></hr>
          <div class="Category-module">
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Name</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: 'categories', collection: @categories %>
              </tbody>
            </table>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
