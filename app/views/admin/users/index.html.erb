<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <%= render '/shared/flash_messages', resource: flash[:notice] %>
          <div class="row">
            <div class="col-lg-6">
              <h2> User Database </h2>
            </div>
            <div class="col-lg-5">
              <div class="input-group">
                
                <%= form_with(url: admin_users_path, method: :get) do |f|%>
                  <div class="d-flex ">
                    <div class="style-me"><%= f.text_field :search, class:"form-control rounded" %></div>
                    <div><%= f.submit "Search", name:nil , class: "btn btn-outline-primary"%></div>
                  </div>
                <% end %>
              
              </div>
            </div>      
          <hr></hr>
          <%= render partial: 'user_module' %>
        </div>
      </div>
    </div>
  </div>
</div>
