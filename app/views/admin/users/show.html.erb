<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <%= render '/shared/flash_messages'%>
          <div class="row">
            <div class="col-lg-6">
              <h2> User Show </h2>
            </div>      
            <hr></hr>
          </div>
        </div>
        <div class="row">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">First Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= @user.first_name %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Last Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= @user.last_name %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= @user.email %></p>
                </div>
              </div>
              <hr>
              <%= link_to 'Back', admin_users_path, class: "btn btn-primary"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
