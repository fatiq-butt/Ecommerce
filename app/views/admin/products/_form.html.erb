<%= form_for [:admin, @product] do |f| %>
  <div class="form-group">
    <%= f.label :title , "Title: "%>
    <%= f.text_field :title, class: "form-control", required: true %><br>
  </div>
    <%= f.label :price , "Price: "%>
    <%= f.number_field :price, class: "form-control", required: true, step: :any %><br>
  </div>   
  <div class="form-group">
    <%= f.label :description , "Description :" %>
    <%= f.text_field :description, class: "form-control", required: true %><br>
  </div>
  <div class="form-group mb-2">
    <%= f.label :status , "Status :" %>
    <%= f.select :status, Product::STATUS, {}, {class: "form-control"} %>
  </div>
  <%= f.submit class: "btn btn-primary" %>    
<% end %>
