<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-6">
              <h2>Products Listing</h2>
            </div>
            <div class="col-lg-3">  
              <div class="input-group">
                
                <%= form_with(url: admin_products_path, method: :get) do |f|%>
                  <div class="d-flex ">
                    <div class="style-me"><%= f.text_field :search, class:"form-control rounded" %></div>
                    <div><%= f.submit "Search", name:nil, class: "btn btn-outline-primary"%></div>
                  </div>
                <% end %>

              </div>  
            </div>
            <div class="col-lg-3">
              <div class="input-group">
                <%= link_to "Add New +", new_admin_product_path, class: "btn btn-primary" %>
              </div>
            </div>  
          <hr></hr>
          <div id="product_listing_table">
            <%= render partial: 'product_table' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
