<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-6">
              <h2>Show Product</h2>
            </div>  
          <hr></hr>
          <section class="mb-5">
            <div class="row">
              <div class="col-md-6 mb-4 mb-md-0">
                <div id="mdb-lightbox-ui"></div>
                <div class="mdb-lightbox">
                  <div class="row product-gallery mx-1">
                    <div class="col-12 mb-0">
                      <figure class="view overlay rounded z-depth-1 main-img">
                        <div class="container">
                          <div class="col-md-8 px-0">
                            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" >
                              <div class="carousel-inner mt-4 mb-5 ms-2 me-3">
                                <% if @product.images.attached? %>
                                  <% @product.images.each_with_index do |img, index| %>
                                    <div class="carousel-item <%= 'active' if index.zero? %>">
                                      <%= image_tag img, class: "d-block product-show" %>
                                    </div>
                                  <% end %>
                                <% end %>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                  <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                  <span class="visually-hidden">Next</span>
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </figure>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <h5><%= @product.title %></h5>
                <p><span class="mr-1"><strong><%= currency_price(@product.price) %></strong></span></p>
                <p class="pt-1"><%= @product.description %></p>
                <div class="table-responsive">
                  <table class="table table-sm table-borderless mb-0">
                    <tbody>
                      <tr>
                        <th class="pl-0 w-25" scope="row"><strong>Status</strong></th>
                        <td><%= @product.status %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <hr>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
