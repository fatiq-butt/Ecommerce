<div class="col-md-4">
  <div class="card">
    <div class="img-container">
      <%= image_tag products.images.first, class: 'img-fluid' %>
    </div>
    <div class="product-detail-container">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="mb-0"><%= products.title %></h6> <span class="text-danger font-weight-bold">$<%= products.price %></span>
      </div>
      <div class="mt-3"> <button class="btn btn-danger btn-block">Add to Cart</button> </div>
    </div>
  </div>
</div>
