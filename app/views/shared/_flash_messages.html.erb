<% if flash[:notice].present?  %>
  <div class="alert alert-success" role="alert">
    <%=flash[:notice]%>
  </div>
<%end%>
<% if flash[:error].present?  %>
  <div class="alert alert-danger" role="alert">
    <%=flash[:error]%>
  </div>
<% end %>
<% if flash[:alert].present?  %>
  <div class="alert alert-danger" role="alert">
    <%=flash[:alert]%>
  </div>
<% end %>
