<%= form_for user_session_path do |f| %>
  <div class="form-group">
    <%= f.label :first_name , "Title: "%>
    <%= f.text_field :first_name, class: "form-control", required: true %><br>
  </div>
  <div class="form-group">
    <%= f.label :last_name , "Price: "%>
    <%= f.number_field :last_name, class: "form-control", required: true, step: :any %><br>
  </div>   
  <div class="form-group">
    <%= f.label :email , "Description :" %>
    <%= f.text_field :email, class: "form-control", required: true %><br>
  </div>
  <%= f.submit class: "btn btn-primary mb-5" %>    
<% end %>
